---
import '../../src/styles/globals.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
    title: string;
    description?: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{title}</title>
        <meta name="viewport" content="width=device-width" />
        {description && <meta name="description" content={description} />}
        {Astro.url && <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site ?? Astro.url).toString()} />}
        <meta property="og:title" content={title} />
        {description && <meta property="og:description" content={description} />}
        <meta property="og:type" content="website" />
        <meta property="og:image" content={new URL('/images/sonpeterdotcom-og.jpg', Astro.site ?? Astro.url).toString()} />
        <meta name="generator" content={Astro.generator} />
        <link rel="icon" type="image/png" href="/favicon.png" />

        <!-- Google Fonts: Lato & Karla -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Karla:wght@400;500;600&family=Lato:wght@400;700;900&display=swap" rel="stylesheet" />
    </head>
    <body class="antialiased text-navy bg-white">
        <div class="flex flex-col min-h-screen">
            <Header />
            <div class="flex flex-col grow pt-24 sm:pt-28 bg-sky-50">
                <main class="grow"><slot /></main>
            </div>
            <Footer />
        </div>
    </body>
</html>
