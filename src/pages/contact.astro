---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact | Peter Son" description="Get in touch with Peter Son for web development projects and collaborations.">
    <section class="py-16 sm:py-24 lg:py-32">
        <div class="max-w-2xl mx-auto px-6 sm:px-8">
            <div class="text-center mb-12">
                <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-navy mb-6">Let's Connect</h1>
                <p class="text-lg sm:text-xl text-navy">Interested in working together? I'd love to hear from you.</p>
            </div>

            <form name="contact" method="POST" data-netlify="true" data-netlify-honeypot="bot-field" class="space-y-6">
                {/* Honeypot field */}
                <div class="hidden">
                    <label>
                        Don't fill this out if you're human:
                        <input name="bot-field" />
                    </label>
                </div>

                {/* Name field */}
                <div>
                    <label for="name" class="block text-sm font-medium text-navy mb-2"> Name * </label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        required
                        class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-sky focus:border-sky transition-colors duration-200"
                        placeholder="Your name"
                    />
                </div>

                {/* Email field */}
                <div>
                    <label for="email" class="block text-sm font-medium text-navy mb-2"> Email * </label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        required
                        class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-sky focus:border-sky transition-colors duration-200"
                        placeholder="your.email@example.com"
                    />
                </div>

                {/* Message field */}
                <div>
                    <label for="message" class="block text-sm font-medium text-navy mb-2"> Message * </label>
                    <textarea
                        id="message"
                        name="message"
                        rows="6"
                        required
                        class="w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-sky focus:border-sky transition-colors duration-200 resize-vertical"
                        placeholder="Tell me about your project..."></textarea>
                </div>

                {/* Submit button */}
                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg"> Send Message </button>
                </div>
            </form>

            {/* Alternative contact info */}
            <div class="mt-16 text-center">
                <p class="text-navy mb-4">Or reach out directly:</p>
                <a href="mailto:hello@peteson.me" class="text-sky hover:text-sky/80 transition-colors duration-200 text-lg font-medium"> hello@peteson.me </a>
            </div>
        </div>
    </section>
</Layout>
