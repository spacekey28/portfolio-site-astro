---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact | Peter Son" description="Get in touch with Peter Son for collaborations or inquiries.">
    <main class="py-16 sm:py-24 lg:py-32">
        <div class="max-w-3xl mx-auto px-6 sm:px-8 text-center">
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-navy mb-6">Get in Touch</h1>
            <p class="text-lg sm:text-xl text-navy max-w-2xl mx-auto mb-12">Have a project in mind or just want to say hello? Feel free to reach out!</p>

            <form
                name="contact"
                method="POST"
                data-netlify="true"
                data-netlify-honeypot="bot-field"
                action="/contact/success"
                class="bg-white p-8 rounded-md shadow-lg text-left space-y-6"
                id="contact-form"
            >
                <input type="hidden" name="form-name" value="contact" />
                <p class="hidden">
                    <label>Don't fill this out if you're human: <input name="bot-field" /></label>
                </p>

                <div>
                    <label for="name" class="block text-navy text-lg font-medium mb-2">Name *</label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-sky focus:border-transparent transition-all duration-200 text-navy"
                        placeholder="Your full name"
                    />
                </div>

                <div>
                    <label for="email" class="block text-navy text-lg font-medium mb-2">Email *</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-sky focus:border-transparent transition-all duration-200 text-navy"
                        placeholder="your.email@example.com"
                    />
                </div>

                <div>
                    <label for="message" class="block text-navy text-lg font-medium mb-2">Message *</label>
                    <textarea
                        id="message"
                        name="message"
                        rows="6"
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-md focus:ring-2 focus:ring-sky focus:border-transparent transition-all duration-200 text-navy"
                        placeholder="Tell me about your project or just say hello..."></textarea>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary btn-lg" id="submit-btn">
                        <span class="submit-text">Send Message</span>
                        <span class="loading-text hidden">Sending...</span>
                    </button>
                </div>
            </form>

            <p class="text-navy mt-12 text-lg">
                You can also reach me directly at <a href="mailto:sonpeterdotcom@gmail.com" class="text-sky hover:underline">sonpeterdotcom@gmail.com</a>
            </p>
        </div>
    </main>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('contact-form');
            const submitBtn = document.getElementById('submit-btn');
            const submitText = submitBtn.querySelector('.submit-text');
            const loadingText = submitBtn.querySelector('.loading-text');

            // Check if we're on a success page (Netlify adds ?success=true to URL)
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('success') === 'true') {
                // Show success message
                const successMessage = document.createElement('div');
                successMessage.className = 'bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-md mb-6';
                successMessage.innerHTML = `
                    <div class="flex items-center">
                        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        <strong>Message sent successfully!</strong> Thank you for reaching out. I'll get back to you soon.
                    </div>
                `;
                form.parentNode.insertBefore(successMessage, form);
                form.style.display = 'none';
            }

            form.addEventListener('submit', function (e) {
                // Show loading state
                submitText.classList.add('hidden');
                loadingText.classList.remove('hidden');
                (submitBtn as HTMLButtonElement).disabled = true;
                submitBtn.classList.add('opacity-75', 'cursor-not-allowed');

                // The form will submit normally to Netlify
                // Netlify will handle the submission and redirect back with ?success=true
            });

            // Add real-time validation feedback
            const inputs = form.querySelectorAll('input[required], textarea[required]');
            inputs.forEach((input) => {
                input.addEventListener('blur', function () {
                    if (this.checkValidity()) {
                        this.classList.remove('border-red-300');
                        this.classList.add('border-green-300');
                    } else {
                        this.classList.remove('border-green-300');
                        this.classList.add('border-red-300');
                    }
                });
            });
        });
    </script>
</Layout>
